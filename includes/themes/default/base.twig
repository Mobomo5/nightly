<!DOCTYPE html>
<html>
<head>
    <title>{{ blocks.main.getTitle }} | {{ site.getTitle }}</title>
    <meta name="Generator" content="Educask version {{ site.getEducaskVersion }}">
    <meta http-equiv="X-FRAME-OPTIONS" content="DENY">
    <script type="text/javascript"
            src="{{ site.getBaseDirectory }}thirdPartyLibraries/fancybox/lib/jquery-1.10.1.min.js"></script>

    <link rel="stylesheet" type="text/css" href="{{ site.getBaseDirectory }}includes/themes/default/css/theme.css"/>
    <link rel="stylesheet" type="text/css"
          src="{{ site.getBaseDirectory }}thirdPartyLibraries/fancybox/source/jquery.fancybox.css"/>

    <script type="text/javascript"
            src="{{ site.getBaseDirectory }}thirdPartyLibraries/fancybox/source/jquery.fancybox.js"></script>
    <script type="text/javascript"
            src="{{ site.getBaseDirectory }}thirdPartyLibraries/fancybox/source/jquery.fancybox.pack.js"></script>
    <script type="text/javascript"
            src="{{ site.getBaseDirectory }}thirdPartyLibraries/easyModal/jquery.easyModal.js"></script>

    {{ script.links|raw }}


    <script type="text/javascript">

        $(function () {
            $("#modal1").easyModal({
                        top: 100,
                        overlay: 0.4,
                        overlayClose: false}
            );
            $("#notices-modal").easyModal({
                        top: 100,
                        overlay: 0.4,
                        overlayClose: false}
            );

            $("#login").click(function (e) {
                $("#modal1").trigger("openModal");
                e.preventDefault();
            });
            $("#login-form-cancel").click(function (e) {
                $("#modal1").trigger("closeModal");
                e.preventDefault();
            });
            $("#notices-close").click(function (e) {
                $("#notices-modal").trigger("closeModal");
                e.preventDefault();
            });
        });
        $('document').ready(function (e) {
            $("#notices-modal").trigger("openModal");

        })

        {{ site.getScripts|raw }}
    </script>

    {% block head %}
    {% endblock %}
</head>
<body>
{% block body %}
    {% if blocks|keys[0] == "home" %}
        {% include "homepage.twig" %}
    {% else %}
        {% include "index.twig" %}
    {% endif %}
{% endblock %}
</body>
</html>