{% extends "@html5/base.twig" %}
{% block head %}
    <link rel="stylesheet" type="text/css" href="{{ site.getBaseDirectory }}includes/themes/default/css/theme.css"/>
    <script type="text/javascript"src="{{ site.getBaseDirectory }}thirdPartyLibraries/easyModal/jquery.easyModal.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#modal1").easyModal({
                        top: 100,
                        overlay: 0.4,
                        overlayClose: false}
            );
            $("#notices-modal").easyModal({
                        top: 100,
                        overlay: 0.4,
                        overlayClose: false}
            );

            $("#login").click(function (e) {
                $("#modal1").trigger("openModal");
                e.preventDefault();
            });
            $("#login-form-cancel").click(function (e) {
                $("#modal1").trigger("closeModal");
                e.preventDefault();
            });
            $("#notices-close").click(function (e) {
                $("#notices-modal").trigger("closeModal");
                e.preventDefault();
            });
        });
        $('document').ready(function (e) {
            $("#notices-modal").trigger("openModal");

        })
    </script>
{% endblock %}
{% block body %}
    {% if blocks|keys[0] == "home" %}
        {% include "homepage.twig" %}
    {% else %}
        {% include "default.twig" %}
    {% endif %}
{% endblock %}